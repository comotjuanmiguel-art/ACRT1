v = int(input("input your numeric grade to check if you passed: "))

if v < 60 and v > 1:
    print(f"grade {v} less than 60 there you failed the subject")
    
elif v >=60 and v <= 69:
    print(f"your grade is {v} is within 60 - 69 therefore you got a D")
    
elif v >=70 and v <= 79:
    print(f"your grade is {v} is within 70 - 79 therefore you got a C")
    
elif v >=80 and v <= 89:
    print(f"your grade is {v} is within 80 - 89 therefore you got a B")
    
elif v >=90 and v <= 100:
    print(f"your grade is {v} is within 90 - 100 therefore you got a A")
    
else:
    print("please give an appropriate value your grade cannot be lower than 0 or greater than 100")
